{
  "name": "wall-of-blame",
  "displayName": "Wall of Blame",
  "description": "Compteur d'erreurs et attribuer la honte au dernier commit.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
					"id": "nodeContributors",
					"name": "Node Contributors"
				}
      ]
    },
    "commands": [
      {
        "command": "extension.blame",
        "title": "Blame"
      },
      {
        "command": "extension.showGitContributors",
        "title": "Show Git Contributors"
      },
      {
				"command": "nodeContributors.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "nodeContributors.addEntry",
				"title": "Add"
			},
			{
				"command": "nodeContributors.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "nodeContributors.deleteEntry",
				"title": "Delete"
			}
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.blame",
                "title": "Blame"
            },
            {
                "command": "extension.showGitContributors",
                "title": "Show Git Contributors"
            },
            {
                "command": "extension.unblame",
                "title": "Unblame"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.blame",
                    "group": "navigation"
                },
                {
                    "command": "extension.unblame",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.blame",
                    "group": "navigation"
                },
                {
                  "command": "extension.unblame",
                  "group": "navigation"
              }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.94.0",
        "@types/mocha": "^10.0.8",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "eslint": "^9.11.1",
        "typescript": "^5.6.2",
        "ts-loader": "^9.5.1",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}
}
